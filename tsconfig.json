{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@bot/*": ["src/bot/*"],
      "@panel/*": ["src/panel/*"],
      "@login/*": ["src/login/*"],
      "typings": ["typings"],
      "@typings": ["src/typings/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots" : [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "./",
    "./src",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"],
}
