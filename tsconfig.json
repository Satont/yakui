{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@bot/*": [
        "src/bot/*"
      ],
      "@panel/*": [
        "src/panel/*"
      ],
      "@login/*": [
        "src/login/*"
      ],
      "typings": [
        "typings"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "./",
    "./src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}